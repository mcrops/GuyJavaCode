<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/rl" >

    <LinearLayout
     android:id="@+id/questionholder"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/buttonholder">

        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingBottom="1dp"
        android:paddingTop="6dp"
        android:text="Question"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtquestionholder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="1dp"
        android:text=""
        android:textSize="17sp" />

        <EditText
            android:id="@+id/editTextAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
        android:paddingBottom="1dp"
        android:paddingTop="6dp"
            android:inputType="textMultiLine"/>
     <LinearLayout
     android:id="@+id/sound_buttons_listview"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttonholder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingBottom="0dip"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:paddingTop="4dip" >

        <ImageButton
            android:id="@+id/form_back_button"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:contentDescription="@string/field_backward"
            android:src="@drawable/ic_menu_backward"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/form_forward_button"
            android:layout_width="0dip"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:contentDescription="@string/field_forward"
            android:src="@drawable/ic_menu_forward"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>